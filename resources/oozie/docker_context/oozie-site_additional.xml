<!-- These configuration properties will be added to the default oozie-site.xml file. -->
<configuration>
    <property>
        <name>oozie.service.SparkConfigurationService.spark.configurations</name>
        <value>*=/opt/hadoop/etc/hadoop</value> 
        <!-- It is not optimal that this path is hard-coded. -->
    </property>

    <property>
        <name>oozie.base.url</name>
        <value>http://oozieserver:11000/oozie</value>
    </property>
</configuration>
